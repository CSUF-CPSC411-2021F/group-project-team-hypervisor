<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="Category">

        <EditTextPreference
            app:key="category"
            app:title="Enter a Category"
            app:useSimpleSummaryProvider="true" />



<!--        <NumberPicker-->
<!--            app:key="categoryPicker"-->
