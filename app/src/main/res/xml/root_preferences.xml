    </PreferenceCategory>

    <PreferenceCategory
        app:title="Range Selector">

        <SeekBarPreference
            app:key="rangeSelector"
            app:title="Radius"
            app:showSeekBarValue="true"
            app:defaultValue="50"/>
    </PreferenceCategory>

    <Preference
        app:key="version"
        app:title="Build version"
        app:summary="1.2.345"/>

</PreferenceScreen>